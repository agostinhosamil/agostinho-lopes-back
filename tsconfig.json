{
  "compilerOptions": {

    "target": "es2016",

    "module": "commonjs",
    "rootDir": ".",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@app": ["./src/app"],
      "@app/*": ["./src/app/*"],
      "@config/*": ["./src/config/*"],
      "@utils/*": ["./src/utils/*"],
      "@controllers": ["./src/app/controllers"],
      "@controllers/*": ["./src/app/controllers/*"],
      "@models": ["./src/app/models"],
      "@models/*": ["./src/app/models/*"]
    },

    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],

    "resolveJsonModule": true,
    "allowJs": true,

    "outDir": "./dist",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true
  },

  "include": [
    "./src/**/*",
    "./tests/**/*"
  ]
}
